\useoutertheme[footline=authortitle, subsection=false]{miniframes}
\useinnertheme{circles}
\usecolortheme{whale}
\usecolortheme{orchid}

\definecolor{beamer@blendedblue}{rgb}{0.137,0.466,0.741}
\definecolor{airforceblue}{rgb}{0.36, 0.54, 0.66}
\definecolor{amber}{rgb}{1.0, 0.75, 0.0}
\definecolor{oxfordblue}{rgb}{0.0, 0.13, 0.28}
\definecolor{darkmidnightblue}{rgb}{0.0, 0.2, 0.4}
\definecolor{darkred}{rgb}{0.55, 0.0, 0.0}
\definecolor{navyblue}{rgb}{0.0, 0.0, 0.5}

%\setbeamercolor{structure}{fg=beamer@blendedblue}
\setbeamercolor{structure}{bg=blue, fg=darkmidnightblue}   % Header of each slide
\setbeamercolor{titlelike}{parent=structure}
\setbeamercolor{title}{bg=white, fg=blue}                         % Main Title, first slide
\setbeamerfont{title}{size=\Large}                         % Main Title, first slide
\setbeamercolor{frametitle}{fg=yellow, bg=oxfordblue}  % Frame tittle
\setbeamercolor{item}{fg=black}

%LG Settings
\AtBeginDocument{\fontsize{10}{14}\selectfont}   % Font size and inter space
\setbeamertemplate{itemize items}[default]
\setbeamertemplate{enumerate items}[square]
\setbeamercolor{enumerate item}{fg=blue!80!black}
\setbeamercolor{enumerate subitem}{fg=blue!80!black}
\setbeamercolor{item projected}{bg=white!80!blue,fg=blue}
%\setbeamertemplate{enumerate items}[default]
%\setbeamertemplate{enumerate items}[square]
%\setbeamercolor{enumerate item}{fg=blue!80!black}
%\setbeamercolor{enumerate subitem}{fg=red!80!black}

%% Fontsize Items
\setbeamerfont*{itemize/enumerate body}{size=\fontsize{10}{12}}
\setbeamerfont*{itemize/enumerate subbody}{size=\fontsize{9}{11}}  %{Font size}{Line Separation}
\setbeamerfont*{itemize/enumerate subsubbody}{size=\scriptsize}

%% Subtitles
\setbeamercolor{framesubtitle}{fg=yellow, bg=oxfordblue}%
\setbeamerfont{framesubtitle}{size=\small}%

\setbeamertemplate{headline}
{%
  \begin{beamercolorbox}[colsep=1.5pt]{upper separation line head}
  \end{beamercolorbox}
  \begin{beamercolorbox}{section in head/foot}
    \vskip0pt\insertsectionnavigationhorizontal{\paperwidth}{}{}\vskip0pt
  \end{beamercolorbox}%
  \ifbeamer@theme@subsection%
    \begin{beamercolorbox}[colsep=2.5pt]{middle separation line head}
    \end{beamercolorbox}
    \begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,%
      leftskip=.3cm,rightskip=.3cm plus1fil]{subsection in head/foot}
      \usebeamerfont{subsection in head/foot}\insertsubsectionhead
    \end{beamercolorbox}%
  \fi%
  \begin{beamercolorbox}[colsep=1.5pt]{lower separation line head}
  \end{beamercolorbox}
}
\mode
<all>
